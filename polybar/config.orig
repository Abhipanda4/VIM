[colors]
dark = #111
light = #ccffffff
theme = #2aa198
bg-1 = #222222

[bar/top]
monitor = ${env:MONITOR:}
# monitor = eDP1
width = 100%
height = 34

background = ${colors.dark}
foreground = ${colors.light}

line-color = #00000000
line-size = 2

spacing = 2
padding = 5
module-margin = 4

tray-detached = false
tray-position = right
tray-padding = 2

font-0 = NotoSans-Regular:size=9;-1
font-1 = MaterialIcons:size=10;0
font-2 = Termsynu:size=8:antialias=false;-2
font-3 = FontAwesome:size=10;0

modules-left = i3 mpd
modules-right = xkeyboard cpu memory backlight volume wireless-network wired-network battery date

# Modules on right
[module/xkeyboard]
type = internal/xkeyboard
label-layout =
label-indicator-foreground = #000
label-indicator-background = ${colors.theme}
label-indicator-padding = 2

[module/cpu]
type = internal/cpu
interval = 1
format = <label>
label =   %percentage%%

[module/memory]
type = internal/memory
format = <label>
label =    %gb_used%

[module/backlight]
type = internal/xbacklight
format = <label> <bar>

label = 
bar-width = 8
bar-indicator = 
bar-indicator-font = 1
bar-indicator-foreground = #ff
bar-fill = -
bar-fill-font = 3
bar-fill-foreground = ${colors.theme}
bar-empty = -
bar-empty-font = 3
bar-empty-foreground = #444444

[module/volume]
type = internal/pulseaudio
speaker-mixer = Speaker
headphone-mixer = Headphone
headphone-id = 9
mapped = true

format-volume = <label-volume> <bar-volume>
label-volume = 
label-muted =    Mute
label-muted-foreground = #ff6666

ramp-volume-0 = 
ramp-volume-1 = 

bar-volume-width = 8
bar-volume-foreground-0 = ${colors.theme}
bar-volume-indicator = 
bar-volume-indicator-font = 5
bar-volume-indicator-foreground = #ff
bar-volume-fill = -
bar-volume-fill-font = 6
bar-volume-empty = -
bar-volume-empty-font = 6
bar-volume-empty-foreground = #444444

[module/wireless-network]
type = internal/network
interface = wlp8s0
interval = 3.0
ping-interval = 50

format-connected = <label-connected>
label-connected =   %{T3}%local_ip%%{T-}

[module/wired-network]
type = internal/network
interface = enp9s0
interval = 3.0
label-connected =   %{T3}%local_ip%%{T-}

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98

format-charging = <animation-charging> <label-charging>
format-discharging =   <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

ramp-capacity-0 = 
ramp-capacity-0-foreground = #f53c3c
ramp-capacity-1 = 
ramp-capacity-1-foreground = #ffa900
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

[module/date]
type = internal/date
label =  %date%   %time%
date = %%{F#aa} %A, %d %b %Y%%{F-}
time = %%{F#fff}  %I:%M %p%%{F-}

format-padding = 3

; Modules on left
[module/i3]
type = internal/i3
strip-wsnumbers = true
wrapping-scroll = false

label-focused =%name%
label-focused-foreground = ${colors.theme}
label-focused-background = ${colors.bg-1}
label-focused-overline = ${colors.theme}
label-focused-padding = 5

label-unfocused =%name%
label-unfocused-padding = 5

label-visible =%name%
label-visible-padding = 5

label-urgent =%name%
label-urgent-background = #ff6666
label-urgent-foreground = #ffffff
label-urgent-padding = 5

pin-workspaces = true

[module/mpd]
type = internal/mpd
format-online = <bar-progress> <label-time> <label-song>

bar-progress-width = 20
bar-progress-format = %{A4:mpdseek+2: A5:mpdseek-2:}%fill%%indicator%%empty%%{A A}
bar-progress-indicator = 
bar-progress-indicator-foreground = #ff
bar-progress-indicator-font = 1
bar-progress-fill = -
bar-progress-fill-foreground = ${colors.theme}
bar-progress-fill-font = 3
bar-progress-empty = -
bar-progress-empty-font = 3
bar-progress-empty-foreground = #44

label-time-foreground = ${colors.theme}

