[colors]
dark = #131313
light = #f1f1f1
theme = #2aa198
bg-1 = #212121

[bar/top]
monitor = eDP1
width = 100%
height = 30

background = ${colors.dark}
foreground = ${colors.light}
line-size = 2
module-margin-left = 2
module-margin-right = 2
padding = 2

tray-detached = false
tray-position = right
tray-padding = 2

font-0 = Roboto Mono Bold for Powerline:size=10;2
font-1 = Unifont:style=Sans-Serif:size=11;2
font-2 = Font Awesome 5 Free:style=Regular:pixelsize=11;2
font-3 = Font Awesome 5 Free:style=Solid:pixelsize=11;2
font-4 = Font Awesome 5 Brands:style=Regular:pixelsize=11;2
font-5 = Material Icons:style=Regular:pixelsize=11;2

modules-left = icon i3 mpd
modules-right = xkeyboard cpu memory backlight volume wireless-network wired-network battery date

# Modules on right
[module/xkeyboard]
type = internal/xkeyboard
label-layout =
label-indicator-foreground = #000
label-indicator-background = ${colors.theme}
label-indicator-padding = 2

[module/cpu]
type = internal/cpu
interval = 1
format = <label>
label =   %percentage%%

[module/memory]
type = internal/memory
format = <label>
label =    %gb_used%

[module/backlight]
type = internal/xbacklight
format = <label> <bar>

label = 
bar-width = 8
bar-indicator = █
bar-indicator-foreground = #ff
bar-fill = ─
bar-fill-foreground = ${colors.theme}
bar-empty = ─
bar-empty-foreground = #444444

[module/volume]
type = internal/pulseaudio
speaker-mixer = Speaker
headphone-mixer = Headphone
headphone-id = 9
mapped = true

format-volume = <label-volume> <bar-volume>
label-volume = 
label-muted =    Mute
label-muted-foreground = #ff6666

ramp-volume-0 = 
ramp-volume-1 = 

bar-volume-width = 8
bar-volume-foreground-0 = ${colors.theme}
bar-volume-indicator = █
bar-volume-indicator-foreground = #ff
bar-volume-fill = ─
bar-volume-empty = ─
bar-volume-empty-foreground = #444444

[module/wireless-network]
type = internal/network
interface = wlp8s0
interval = 3.0

format-connected = <label-connected>
label-connected =   %{T0}%local_ip%%{T-}

[module/wired-network]
type = internal/network
interface = enp9s0
interval = 3.0
label-connected =   %{T0}%local_ip%%{T-}

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98

format-charging = <animation-charging> <label-charging>
format-discharging =   <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

ramp-capacity-0 = 
ramp-capacity-0-foreground = #f53c3c
ramp-capacity-1 = 
ramp-capacity-1-foreground = #ffa900
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

[module/date]
type = internal/date
label =%date%   %time%
date = %A, %d %b %Y
time = %I:%M %p

format-padding = 0

# Modules on left
[module/icon]
type = custom/text
content = 
content-padding = 2
content-background = ${colors.theme}
content-foreground = ${colors.dark}

[module/i3]
type = internal/i3
strip-wsnumbers = true
wrapping-scroll = false

label-focused =%name%
label-focused-foreground = ${colors.theme}
label-focused-background = ${colors.bg-1}
label-focused-overline = ${colors.theme}
label-focused-padding = 3

label-unfocused =%name%
label-unfocused-padding = 3

label-visible =%name%
label-visible-padding = 3

label-urgent =%name%
label-urgent-background = #ff6666
label-urgent-foreground = #ffffff
label-urgent-padding = 3

pin-workspaces = true

[module/mpd]
type = internal/mpd
format-online =  <label-song>

label-song-maxlen = 40
label-song-ellipsis = true
